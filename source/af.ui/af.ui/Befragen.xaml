<Window x:Class="af.ui.Befragen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:ui="clr-namespace:af.ui" xmlns:contracts="clr-namespace:af.contracts;assembly=af.contracts"
        mc:Ignorable="d" 
        d:DesignHeight="300" d:DesignWidth="400"
        Title="BefragenWindow" Height="350" Width="525">

    <Window.Resources>
        <DataTemplate x:Key="Fragen.Style">
            <!--DataType="{x:Type contracts:Befragung.Frage}"-->
            <StackPanel>
                <TextBlock Text="{Binding Text, StringFormat={}Frage:{0}}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Button Content="Öffne Fragenkatalog" HorizontalAlignment="Left" Margin="12,12,0,0" Name="button1" VerticalAlignment="Top" />

        <ItemsControl Margin="50,50,0,0"
                      ItemsSource="{Binding Fragen, RelativeSource={RelativeSource AncestorType={x:Type ui:Befragen}}}"
                      ItemTemplate="{StaticResource Fragen.Style}"/>
        
        <Button Content="Auswerten" HorizontalAlignment="Left" Margin="194,261,0,0" Name="button2" VerticalAlignment="Top"/>
    </Grid>
</Window>
